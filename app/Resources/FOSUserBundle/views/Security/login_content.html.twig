{% trans_default_domain 'FOSUserBundle' %}


<div>
    <div class="row">
        <div class="main-login col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="logo margin-top-30">
                <img src="{{ asset('bundles/projectgamehub/images/logo game hub.png') }}" style="width: 20% ;height: 20%"   alt="Game hub"/>
            </div>
<!-- start: LOGIN BOX -->
<div class="box-login">
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <fieldset>
            <legend>
                Sign in to your account
            </legend>
            <p>
                Please enter your name and password to log in.
            </p>
            <div class="form-group">
                <span class="input-icon">

                    <input type="text" class="form-control" placeholder="Username" id="username" name="_username" value="{{ last_username }}" required="required" />
                    <i class="fa fa-user"></i>
                </span>
            </div>
            <div class="form-group form-actions">
                <span class="input-icon">
                    <input type="password" class="form-control password" id="password" name="_password" required="required" placeholder="Password" />
                    <i class="fa fa-lock"></i>

                </span>
            </div>
            <div class="form-actions">

                <input type="submit"  class="btn btn-primary pull-right" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />

            </div>
            <div class="new-account">
                Don't have an account yet?
                <a href="{{ path('fos_user_registration_register') }}">
                    Create an account
                </a>
            </div>
        </fieldset>
    </form>
    <!-- start: COPYRIGHT -->
    <div class="copyright">
        &copy; <span class="current-year"></span><span class="text-bold"> GameHub</span>. <span>All rights reserved</span>
    </div>
    <!-- end: COPYRIGHT -->
</div>
<!-- end: LOGIN BOX -->
        </div>
    </div>
</div>
